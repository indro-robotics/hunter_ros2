<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="hunter_steer">
    <xacro:macro name="hunter_motors"
        params="name reflect rotation">
        <link name="${name}_wheel_link">
            <visual>
                <origin xyz="0 ${reflect * -0.065} 0" rpy="0 0 ${rotation}" />
                <geometry>
                    <mesh filename="package://hunter_se_description/models/meshes/rear_wheel.dae" />
                </geometry>
            </visual>
            <collision>
                <!-- <origin xyz="0 0 0" rpy="1.57 0 0" /> -->
                <origin xyz="0 ${reflect * -0.065} 0" rpy="0 0 ${rotation}" />
                <geometry>
                    <mesh filename="package://hunter_se_description/models/meshes/rear_wheel.dae" />
                    <!-- <cylinder radius="${wheel_radius}" length="${wheel_length}" /> -->
                </geometry>
            </collision>
            <inertial>
                <mass value="1.0" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.006864" ixy="0.0" ixz="0.0" iyy="0.012106" iyz="0.0" izz="0.006864" />
                <!-- <inertia ixx="0.22" ixy="0.02" ixz="0.02" iyy="0.22" iyz="0.02" izz="0.378" /> -->
            </inertial>
            <surface>
                <friction>
                    <ode>
                        <mu>1.0</mu>
                        <mu2>1.0</mu2>
                    </ode>
                </friction>
            </surface>
        </link>
        <joint name="${name}_wheel_joint" type="continuous">
            <parent link="base_link" />
            <child link="${name}_wheel_link" />
            <origin
                xyz="${motor_axle_x_offset} ${reflect * motor_axle_y_offset} ${motor_axle_z_offset}" />
            <axis xyz="0 1 0" />
        </joint>
        <gazebo reference="${name}_wheel_link">
            <mu1 value="1.0" />
            <mu2 value="1.0" />
            <kp value="10000000.0" />
            <kd value="1.0" />
            <fdir1 value="0 1 0" />
        </gazebo>
    </xacro:macro>
</robot>