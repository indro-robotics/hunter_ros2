<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="hunter_steer">
    <xacro:macro name="hunter_steer"
        params="name reflect rotation">
        <link name="${name}_steer_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://hunter_se_description/models/meshes/${name}_steer_link.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder radius="${0.04}" length="${0.06}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.5" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
            </inertial>
        </link>
        <link name="${name}_wheel_link">
            <visual>
                <origin xyz="0 0 0.015" rpy="0 0 ${rotation}" />
                <geometry>
                    <mesh filename="package://hunter_se_description/models/meshes/front_wheel.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="1.57 0 0" />
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.5" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.022" ixy="0" ixz="0" iyy="0.022" iyz="0" izz="0.0378" />
            </inertial>
            <surface>
                <friction>
                    <ode>
                        <mu>0.7</mu>
                        <mu2>0.7</mu2>
                    </ode>
                </friction>
            </surface>
        </link>
        <gazebo reference="${name}_wheel_link">
            <mu1 value="1.0" />
            <mu2 value="2.0" />
            <kp value="10000000.0" />
            <kd value="1.0" />
            <fdir1 value="0 1 0" />
        </gazebo>
        <joint name="${name}_steer_joint" type="revolute">
            <parent link="base_link" />
            <child link="${name}_steer_link" />
            <origin
                xyz="${steering_axle_x_offset} ${reflect * steering_axle_y_offset} ${steering_axle_z_offset}"
                rpy="0 0 0" />
            <axis xyz="0 0 1" rpy="0 0 0" />
            <limit lower="${-max_steer}" upper="${max_steer}" effort="10" velocity="4" />
        </joint>
        <joint name="${name}_wheel_joint" type="continuous">
            <parent link="${name}_steer_link" />
            <child link="${name}_wheel_link" />
            <origin xyz="0 ${reflect * steering_wheel_y_offset} ${steering_wheel_z_offset}" />
            <axis xyz="0 1 0" rpy="0 0 0" />
            <!-- <dynamics damping="0.0" friction="2.0" /> -->
        </joint>
    </xacro:macro>
</robot>