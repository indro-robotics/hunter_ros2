<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="hunter_steer">
    <xacro:macro name="hunter_steer"
        params="name reflect rotation">
        <link name="${name}_steer_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://hunter_se_description/models/meshes/${name}_steer_link.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://hunter_se_description/models/meshes/${name}_steer_link.dae" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.25" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.000474" ixy="0.0" ixz="0.0" iyy="0.000474" iyz="0.0" izz="0.000625" />
            </inertial>
        </link>
        <link name="${name}_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 ${rotation}" />
                <geometry>
                    <mesh filename="package://hunter_se_description/models/meshes/front_wheel.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 ${rotation}" />
                <geometry>
                    <mesh filename="package://hunter_se_description/models/meshes/front_wheel.dae" />
                </geometry>
            </collision>
            <inertial>
                <mass value="2.5" />
                <origin xyz="0 0 0" />
                <!-- <inertia ixx="0.006864" ixy="0.0" ixz="0.0" iyy="0.012106" iyz="0.0" izz="0.006864" /> -->
                <inertia ixx="0.008064" ixy="0.0" ixz="0.0" iyy="0.012106" iyz="0.0" izz="0.008064" />
            </inertial>
        </link>
        <gazebo reference="${name}_wheel_link">
            <mu1 value="2.0" />
            <mu2 value="1.0" />
            <kp value="10000000.0" />
            <kd value="1.0" />
            <fdir1 value="1 0 0" />
            <slip1>0</slip1>
            <slip2>0</slip2>
        </gazebo>
        <gazebo reference="${name}_steer_link">
            <mu1 value="1.0" />
            <mu2 value="1.0" />
            <kp value="10000000.0" />
            <kd value="1.0" />
            <fdir1 value="0 1 0" />
            <slip1>0</slip1>
            <slip2>0</slip2>
        </gazebo>
        <joint name="${name}_steer_joint" type="revolute">
            <parent link="base_link" />
            <child link="${name}_steer_link" />
            <origin
                xyz="${steering_axle_x_offset} ${reflect * steering_axle_y_offset} ${steering_axle_z_offset}"
                rpy="0 0 0" />
            <axis xyz="0 0 1" rpy="0 0 0" />
            <limit lower="${-max_steer}" upper="${max_steer}" effort="100" velocity="4" />
        </joint>
        <joint name="${name}_wheel_joint" type="continuous">
            <parent link="${name}_steer_link" />
            <child link="${name}_wheel_link" />
            <origin xyz="0 ${reflect * steering_wheel_y_offset} ${steering_wheel_z_offset}" />
            <axis xyz="0 1 0" rpy="0 0 0" />
        </joint>
    </xacro:macro>
</robot>